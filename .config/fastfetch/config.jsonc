{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/arch-logo.txt",
    "type": "file",
    "padding": {
      "top": 1,
      "left": 3,
      "right": 5
    },
    "color": {
      "1": "red"
    }
  },
  "display": {
    "size": {
      "binaryPrefix": "jedec"
    },
    "bar": {
      "width": 10, // Width of percentage bars
      "char": {
        "elapsed": "⠶", // Character for elapsed portion
        "total": "⠤" // Character for total portion
      },
      "border": {
        "left": "|",
        "right": "|"
      }
    },
    "color": {
      "separator": "blue"
    },
    "separator": " ",
    "constants": [
      "   »»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»»"
    ]
  },
  "modules": [
    "break",
    "break",
    {
      "type": "uptime",
      "key": "Uptime       ",
      "keyColor": "red"
    },
    "break",
    {
      "type": "custom",
      "key": "Software",
      "keyColor": "red"
    },
    {
      "type": "os",
      "key": " ├──Distro   ",
      "keyColor": "magenta",
      "format": "{pretty-name}"
    },
    // {
    //   "type": "custom",
    //   "format": "{$1}",
    //   "outputColor": "separator"
    // },
    {
      "type": "shell",
      "key": " ├──Shell    ",
      "format": "{pretty-name}",
      "keyColor": "magenta"
    },
    {
      "type": "terminal",
      "key": " └──Terminal ",
      "format": "{pretty-name}",
      "keyColor": "magenta"
    },
