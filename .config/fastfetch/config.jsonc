    "break",
    {
      "type": "custom",
      "key": "Hardware",
      "keyColor": "red"
    },
    {
      "type": "cpu",
      "key": " ├──CPU      ",
      "format": "{name}",
      "keyColor": "magenta"
    },
    {
      "type": "gpu",
      "key": " ├──GPU      ",
      "format": "{name}",
      "keyColor": "magenta"
    },
    // {
    //   "type": "swap",
    //   "key": "   SWAP     ",
    //   "keyColor": "cyan"
    // },
    {
      "type": "disk",
      "key": " ├──Disk     ",
      "format": "{size-percentage-bar} => {size-used} of {size-total}",
      "percent": {
        "type": 3 // Тип 3 обычно включает и число, и бар (или используйте 9 для цветного числа)
      },
      "keyColor": "magenta"
    },
    {
      "type": "memory",
      "key": " └──RAM      ",
      "format": "{percentage-bar} => {used} of {total}",
      "percent": {
        "type": 3 // Тип 3 обычно включает и число, и бар (или используйте 9 для цветного числа)
      },
      "keyColor": "magenta"
    },
