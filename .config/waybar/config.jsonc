{
  "layer": "top",
  "margin-left": 3,
  "margin-right": 3,
  "margin-top": 2,
  "modules-left": [
    "hyprland/workspaces",
    "mpris"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "tray",
    "bluetooth",
    "pulseaudio",
    "network",
    "hyprland/language",
    "battery"
  ],
  "mpris": {
	  "format": "{player_icon} {title} - {artist}",
	  "format-paused": "{status_icon} {title} - {artist}",
	  "player-icons": {
		  "default": "‚ñ∂",
		  "mpv": "üéµ"
	  },
	  "status-icons": {
		  "paused": "‚è∏"
	  },
	  "ignored-players": ["firefox"],
	  "tooltip-format": "Artist: {artist}\nTrack: {title}\nAlbum: {album}"
  },
  "battery": {
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "max-length": 25
  },
  "bluetooth": {
    "format": "Ôäî",
    "format-disabled": "Disabled Û∞Ç≤",
    "format-off": "Û∞Ç≤",
    "format-connected": "Ôäî {device_alias}",
    "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "$HOME/.config/waybar/bluetooth.sh",
    "on-click-right": "blueman-manager"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10,
    "icons": {
      "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
    }
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{icon}Ôäî {volume}%",
    "format-muted": "ÔÄ¶",
    "format-icons": {
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "scroll-step": 1,
    "on-click": "$HOME/.config/waybar/audio.sh",
    "on-click-right": "pavucontrol",
    "ignored-sinks": [
      "Easy Effects Sink"
    ]
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´ {signalStrength}%",
    "format-ethernet": "Û∞àÅ",
    "format-linked": "Û∞àÅ NO_IP",
    "format-disconnected": "NO CONNECTION",
    "format-wifi": "Ôá´ {signalStrength}%",
    "on-click": "exec $HOME/.config/waybar/wifi.sh",
    "max-length": 50
  },
  "hyprland/language": {
    "format-en": "EN",
    "format-ru": "RU",
    "format-uk": "UA"
  },
  "clock": {
    "format": "{:%d.%m.%y %H:%M}",
    "format-alt": "{:%H:%M}",
    "tooltip-format": "{calendar}",
    "calendar": {
        "mode": "month",
        "mode-mon-col": 3,
        "on-scroll": 1,
        "format": {
          "months": "<b>{}</b>"
        }
    },
    "actions": {
        "on-click-right": "mode",
        "on-click-forward": "tz_up",
        "on-click-backward": "tz_down",
        "on-scroll-up": "shift_up",
        "on-scroll-down": "shift_down"
    }
  }
}



